<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <img src="https://images.unsplash.com/photo-1549417229-aa67d3263c09?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=934&q=80" alt="profile_pic" style="width: 300px";>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
       <h2 style="text-align:center;"><%= current_user.first_name %> <%= current_user.last_name %></h2>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-md-6 col-lg-6">
       <p style="text-align:center;"><%= current_user.email %></p>
    </div>
    <div class="col-sm-6 col-md-6 col-lg-6">
       <p style="text-align:center;"><%= current_user.phone_number %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
       <p style="text-align:center;"><%= current_user.description %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
       <p style="text-align:center;"> <%= link_to "Deconnect", destroy_user_session_path, method:"delete"  %></p>
    </div>
  </div>
</div>
