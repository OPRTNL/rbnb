
  <%= simple_form_for @cabin do |f| %>

    <% if @cabin.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @cabin.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.input :name %>
    <%= f.input :picture %>
    <%= f.input :city %>
    <%= f.input :address %>
    <%= f.input :daily_rate %>
    <%= f.input :description %>
    <%= f.input :rating %>
    <%= f.input :capacity %>
    <%= f.input :kitchen %>
    <%= f.input :lake %>
    <%= f.input :hot_water %>
    <%= f.input :wifi %>
    <%= f.input :available %>
    <%= f.input :beach %>
    <%= f.input :mountain %>


    <%= f.submit "add as cabin" %>

  <% end %>
